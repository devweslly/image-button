<?xml version="1.0" encoding="utf-8"?>

<!--
    O selector serve para mudar o gráfico do componete
    conforme a ação de click do usuário
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/fundo_purple" /> <!-- pressed -->
    <item android:drawable="@drawable/fundo_orange" /> <!-- default -->

</selector>